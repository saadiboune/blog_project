{% extends 'base.html.twig' %}

{% block title %}Hello ApiPostController!{% endblock %}

{% block body %}
    <div class="rounded shadow bg-white p-5">
        <div class="row">

            <div class="col-12 d-flex mt-5">
                <h2 class="font-weight-light"><i class="fas fa-glass-cheers"></i>Posts</h2>
            </div>
        </div>
        <hr class="mt-1 mb-5 bg-dark">
        <div class="row">
            {% for post in posts %}
                <div class="col-md-6 col-sm-4 col-xs-12">
                    <main class="mt-5 pt-4">
                        <p>{{ post.published | date("m/d/Y") }}</p>
                    <div class="box-part text-center">

                        <i class="fa fa-instagram fa-3x" aria-hidden="true"></i>

                        <div class="title">
                            <h4>{{ post.titre }}</h4>
                        </div>

                        <div class="text">
                            <span>{{ post.content [0:80] }}</span>
                        </div>

                        <a href="{{ path('app_post_details', {'id': post.id}) }}">Learn More</a>

                    </div>
                    </main>
                </div>
            {% else %}
                <p>Sorry, no posts yet !</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
